<?xml version="1.0" encoding="UTF-8" ?>
    <widget xmlns = "http://www.w3.org/ns/widgets"
        xmlns:gap = "http://phonegap.com/ns/1.0"
        id        = "nl.smapps.ingcontactloos"
        versionCode="10" 
        version   = "1.0.0">

    <!-- versionCode is optional and Android only -->

    <name>ING C.B.</name>

    <description>
		Contactloos betalen APP voor de ING
    </description>
    
    <preference name="orientation" value="landscape" />
	<preference name="fullscreen" value="true" />
	<preference name="DisallowOverscroll" value="true" />
	<preference name="StatusBarOverlaysWebView" value="false" />
	<preference name="exit-on-suspend" value="true" />
	
	<icon src="./images/icon.png" gap:platform="ios" width="57" height="57" />
	<icon src="./images/icon-72.png" gap:platform="ios" width="72" height="72" />
	<icon src="./images/icon-96.png" gap:platform="ios" width="96" height="96" />
	<icon src="./images/icon-114.png" gap:platform="ios" width="114" height="114" />
		
	<gap:splash gap:platform="ios" height="768" src="./images/splash-ipad-landscape.png" width="1024" />
	
	<gap:plugin name="com.phonegap.plugin.statusbar" />
	
	
	<gap:config-file platform="ios" parent="UIStatusBarHidden">
		<true/>
	</gap:config-file>

	<gap:config-file platform="ios" parent="UIViewControllerBasedStatusBarAppearance">
		<false/>
	</gap:config-file>


    <author href="http://www.smapps.nl" email="info@smapps.nl">
        SMAPPS | S.W. Verploeg and M.Haagen
    </author>

</widget>